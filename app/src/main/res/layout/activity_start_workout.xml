<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".route.RouteMain">

    <!-- TMapView를 담을 레이아웃 -->
    <LinearLayout
        android:id="@+id/linearLayoutTmap"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
    </LinearLayout>

    <!-- 확대 및 축소 버튼을 지도 위에 고정 배치 -->
    <LinearLayout
        android:id="@+id/zoomControls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/btnZoomIn"
            android:src="@drawable/plus"
            android:scaleType="centerCrop"/>

        <ImageButton
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/btnZoomOut"
            android:src="@drawable/minus"
            android:scaleType="centerCrop"/>

        <ImageButton
            android:id="@+id/btnCurrentLocation"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/gps"
            android:scaleType="centerCrop"
            android:contentDescription="현재 위치 버튼" />

    </LinearLayout>

    <!-- 정보 레이아웃 추가 -->
    <LinearLayout
        android:id="@+id/infoLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:padding="16dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- 거리 및 시간 정보 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/estimatedDistanceTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#1883EF"
                android:textSize="35sp"
                android:textStyle="bold"
                android:paddingRight="5dp" />

            <TextView
                android:id="@+id/estimatedTimeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/estimatedCalorieTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="18sp" />
        </LinearLayout>

        <!-- 시작 버튼 -->
        <Button
            android:id="@+id/btnStartRoute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="시작"
            android:background="@color/design_default_color_primary"
            android:textColor="@android:color/white"/>
    </LinearLayout>

    <!-- 버튼 배치 레이아웃 -->
    <LinearLayout
        android:id="@+id/buttonLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/btnSetStart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="출발지 설정"
            android:background="@color/design_default_color_primary"
            android:textColor="@android:color/white"/>
        <Button
            android:id="@+id/btnEndSet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:text="지정 완료"
            android:background="@color/design_default_color_primary"
            android:textColor="@android:color/white"/>

        <!-- 다시 설정 버튼 추가 -->
        <Button
            android:id="@+id/btnReset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="다시 설정"
            android:background="@color/design_default_color_secondary"
            android:textColor="@android:color/white"
            android:visibility="gone"/>
    </LinearLayout>

    <!-- 마커 추가 버튼 레이어 -->
    <ImageButton
        android:id="@+id/toggleMarkerButton"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_margin="16dp"
        android:src="@drawable/marker"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
