<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/result_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="운동 결과"
        android:textSize="24sp"
        android:textStyle="bold" />

    <!-- 운동 결과 표시 -->
    <TextView
        android:id="@+id/workout_distance_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="운동 거리 : 00km"
        android:textSize="18sp"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/workout_time_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="소요 시간 : 00분"
        android:textSize="18sp"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/workout_kcal_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="소모 칼로리 : 00kcal"
        android:textSize="18sp"
        android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/back_to_main_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="메인화면으로"
        android:layout_marginTop="20dp" />

</LinearLayout>
